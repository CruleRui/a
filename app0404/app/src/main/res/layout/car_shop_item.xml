<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <CheckBox
            android:id="@+id/shou_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/shou_img"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_toRightOf="@+id/shou_check_box"
            android:src="@mipmap/ic_launcher"/>

        <RelativeLayout
            android:layout_toRightOf="@+id/shou_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shou_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="标题"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/shou_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单价"
                    android:textColor="#ff00"
                    />

                <com.bw.shopcar.view.AddView
                    android:id="@+id/add_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>